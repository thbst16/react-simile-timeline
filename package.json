{
  "name": "react-simile-timeline",
  "version": "0.1.0-alpha.0",
  "description": "Modern React port of MIT's Simile Timeline widget with full TypeScript support, accessibility, and touch gestures",
  "type": "module",
  "main": "./dist/react-simile-timeline.umd.cjs",
  "module": "./dist/react-simile-timeline.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-simile-timeline.js",
      "require": "./dist/react-simile-timeline.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\""
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "timeline",
    "simile",
    "react",
    "visualization",
    "events",
    "history",
    "timeline-widget",
    "data-visualization",
    "historical-timeline",
    "react-component",
    "typescript",
    "accessible",
    "wcag",
    "touch-enabled",
    "responsive"
  ],
  "author": "Thomas Beck <thomas@beckshome.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thbst16/react-simile-timeline.git"
  },
  "bugs": {
    "url": "https://github.com/thbst16/react-simile-timeline/issues"
  },
  "homepage": "https://github.com/thbst16/react-simile-timeline#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "sideEffects": false
}
